<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% @contents.each_with_index do |chapter, chap_num| %>
      <li class="pure-menu-item">
        <a href="/chapters/<%= chap_num.to_i + 1%>" class="pure-menu-link"><%= chapter %></a>
      </li>
    <% end %>
  </ul>
</div>